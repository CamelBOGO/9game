<html lang="en" dir="ltr">
  <head>
    <meta charset="utf-8">
    <title>9Game Login</title>
    <link rel="stylesheet" href="/public/css/authstyle.css">
  </head>

    <body>
        <div class = "center">
            <h1> Login </h1>

            <form name = "login" onsubmit="return doLogin(this);">

                <div class="input_field">
                    <input type="text" id="username" name="username" required>
                    <span></span>
                    <label for="username">Enter Your Username </label>
                </div>

                <div class="input_field">
                    <input type="password" id="password" name="password" required>
                    <span></span>
                    <label for="password">Enter Your Password </label>
                </div>

                <button type="submit" name="submit">Login</button>    

                <div class="link"> 
                    Not a Member? 
                    <a href="/register">Register</a>
                </div>

            </form>

            <div class = "forgotPW">
                <a href="/resetEmail">Forgot Password?</a>
            </div>

        </div>

        <script>
            function doLogin(form) {
                form.submit.setAttribute("disabled", "disabled")
                form.submit.innerHTML = "Loading..."
                
                const ajax = new XMLHttpRequest()
                ajax.open("POST", "/auth/login", true)

                ajax.onreadystatechange = () => {
                    if (ajax.readyState == 4 && ajax.status == 200) {
                        form.submit.removeAttribute("disabled")
                        form.submit.innerHTML = "Login"
    
                        const response = JSON.parse(ajax.responseText)
    
                        if (response.status == "success") {
                            const accessToken = response.accessToken
                            localStorage.setItem("accessToken", accessToken)
                            alert("Test window: " + response.message)
                            window.location.href = "/index"
                        } else {
                            alert("Test window: " + response.message)
                        }
                    }
                }
    
                ajax.send(new FormData(form))
                return false
            }
        </script>    

    </body>

</html>